<div class="old-comment">
  <%= div_for(comment) do %>
      <p>
        <strong> Posted <%= time_ago_in_words(comment.created_at)%> ago </strong>
        <%= comment.user.name %> says:<br>
        <%= h(comment.content) %>
      </p>
      <% if current_user.id == comment.user_id %>
        <%= link_to "Delete", bike_comment_url(@bike, comment.id), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>

  <% end %>
</div>

<div class="form-card">
  <div class="entry-form" id="log-in-form">
    <h1>LOGIN</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, value: "Email"%>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", value: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
